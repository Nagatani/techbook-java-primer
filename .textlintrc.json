{
  "filters": {},
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 120
      },
      "max-ten": {
        "max": 4
      },
      "no-exclamation-question-mark": false,
      "no-doubled-joshi": {
        "strict": false,
        "allow": ["も", "や", "か"]
      },
      "ja-no-successive-word": false,
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":", "："]
      },
      "ja-no-redundant-expression": false
    },
    "preset-jtf-style": {
      "1.1.1.本文": false,
      "1.1.3.箇条書き": false,
      "1.2.1.句点(。)と読点(、)": false,
      "2.1.2.漢数字": false,
      "2.1.5.算用数字": false,
      "2.1.6.ローマ数字": false,
      "2.2.1.ひらがなと漢字の使い分け": false,
      "3.1.1.全角文字と半角文字の間": {
        "space": "never"
      },
      "3.3.かっこ類と隣接する文字の間のスペースの有無": false,
      "4.1.3.ピリオド(.)、カンマ(,)": false,
      "4.2.7.コロン(：)": false,
      "4.3.1.丸かっこ（）": false
    },
    "spellcheck-tech-word": true,
    "no-mixed-zenkaku-and-hankaku-alphabet": false
  }
}